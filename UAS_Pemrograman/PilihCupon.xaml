<Window x:Class="UAS_Pemrograman.PilihCupon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UAS_Pemrograman"
        mc:Ignorable="d"
        Title="PilihVoucher" Height="223" Width="418">
    <Grid>
        <Label Content="Daftar Cupon yang tersedia" HorizontalAlignment="Left" Margin="16,22,0,0" VerticalAlignment="Top" Width="251" FontSize="18"/>
        <ListBox x:Name="DaftarCupon" HorizontalAlignment="Left" Height="101" Margin="16,61,0,0" VerticalAlignment="Top" Width="371" SelectionChanged="DaftarCuponSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1">
                        <TextBlock Grid.Row="0" Text="{Binding title}" TextAlignment="Left" FontSize="16" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
